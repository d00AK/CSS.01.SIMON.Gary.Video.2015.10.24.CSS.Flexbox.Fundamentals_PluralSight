html, body
	height 100%
	background #1c1c1c

a:hover
	color gray

header
	display flex
	background black
	padding-top 18px
	justify-content space-around
	flex-flow row wrap

.child
	flex-grow 1

ul
	list-style-type none
	display flex
	flex-flow row wrap
	width 400px
	margin 0
	padding 0

ul li
	flex-grow 1
	text-align center
	width 100px // 400px divided by 4 items

ul li a
	color white
	font-size 0.9em
	text-transform uppercase

header div:nth-child(1)
	flex-grow 8
	wisth 125px
	padding-bottom 15px

header div:nth-child(1) img
	margin-left 20px
